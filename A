local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local StarterGui = game:GetService("StarterGui")
local localPlayer = Players.LocalPlayer

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "NekoLoading"
screenGui.Parent = localPlayer:WaitForChild("PlayerGui")
screenGui.ResetOnSpawn = false
screenGui.IgnoreGuiInset = true

local bg = Instance.new("Frame")
bg.Size = UDim2.new(1, 0, 1, 0)
bg.BackgroundColor3 = Color3.fromRGB(20, 20, 30)
bg.BackgroundTransparency = 0.6
bg.BorderSizePixel = 0
bg.Parent = screenGui

local loadingText = Instance.new("TextLabel")
loadingText.Size = UDim2.new(0.8, 0, 0.1, 0)
loadingText.Position = UDim2.new(0.1, 0, 0.45, 0)
loadingText.BackgroundTransparency = 1
loadingText.Text = "貓腳本啟動中…"
loadingText.TextColor3 = Color3.fromRGB(255, 182, 193)
loadingText.TextScaled = true
loadingText.Font = Enum.Font.GothamBlack
loadingText.Parent = bg

local progressFrame = Instance.new("Frame")
progressFrame.Size = UDim2.new(0.6, 0, 0.01, 0)
progressFrame.Position = UDim2.new(0.2, 0, 0.55, 0)
progressFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 70)
progressFrame.BorderSizePixel = 0
progressFrame.Parent = bg

local progressBar = Instance.new("Frame")
progressBar.Size = UDim2.new(0, 0, 1, 0)
progressBar.BackgroundColor3 = Color3.fromRGB(255, 105, 180)
progressBar.BorderSizePixel = 0
progressBar.Parent = progressFrame

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(1, 0)
corner.Parent = progressBar

TweenService:Create(loadingText, TweenInfo.new(1.2, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1, true), {TextTransparency = 0.4}):Play()
TweenService:Create(progressBar, TweenInfo.new(1.5, Enum.EasingStyle.Linear), {Size = UDim2.new(1, 0, 1, 0)}):Play()

task.spawn(function()
    task.wait(1.5)
    
    local fade = TweenInfo.new(0.6, Enum.EasingStyle.Sine, Enum.EasingDirection.In)
    TweenService:Create(bg, fade, {BackgroundTransparency = 1}):Play()
    TweenService:Create(loadingText, fade, {TextTransparency = 1}):Play()
    TweenService:Create(progressFrame, fade, {BackgroundTransparency = 1}):Play()
    
    task.delay(0.7, function()
        screenGui:Destroy()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/SLOTH-neo/Sloth/refs/heads/main/NEKO"))()
    end)
end)
