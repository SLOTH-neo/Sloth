-- Neko Project - ç¾åŒ–è¼‰å…¥ + å»¶é²åŸ·è¡Œä¸»è…³æœ¬ï¼ˆé˜²å¡æ­»ï¼‰
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")
local HttpService = game:GetService("HttpService")
local StarterGui = game:GetService("StarterGui")

local lp = Players.LocalPlayer
local mainScriptUrl = "https://raw.githubusercontent.com/SLOTH-neo/Sloth/refs/heads/main/NEKO"

-- ScreenGui + UI éƒ¨åˆ†ï¼ˆä¿æŒä½ å–œæ­¡çš„æ¼‚äº®ç‰ˆï¼Œçœç•¥é‡è¤‡ä»£ç¢¼ï¼Œç›´æ¥è²¼é—œéµï¼‰
local sg = Instance.new("ScreenGui")
sg.Name = "NekoLoadingScreen"
sg.ResetOnSpawn = false
sg.IgnoreGuiInset = true
pcall(function() sg.Parent = CoreGui end)
if not sg.Parent then sg.Parent = lp:WaitForChild("PlayerGui") end

-- èƒŒæ™¯ã€cardã€titleã€statusã€barã€pawLeft/pawRight ç­‰ UI ä¿æŒåŸæ¨£...

-- å‹•ç•«éƒ¨åˆ†
task.spawn(function()
    -- é‚Šæ¡†æ—‹è½‰ã€é€²åº¦æ¢å¡«å……ç­‰ï¼ˆä½ çš„åŸ tweenï¼‰

    fillTween.Completed:Wait()
    
    status.Text = "å–µï½ å·²é€£çµå®Œæˆï¼"
    status.TextColor3 = Color3.fromRGB(180, 255, 200)

    task.wait(0.8)

    -- å…ˆé—œé–‰ UIï¼ˆé¿å…å¡åœ¨ç•«é¢ï¼‰
    local disappear = TweenService:Create(card, TweenInfo.new(0.7, Enum.EasingStyle.Back, Enum.EasingDirection.In), {
        Size = UDim2.new(0,0,0,0),
        Position = UDim2.new(0.5,0,0.5,0),
        BackgroundTransparency = 1
    })
    disappear:Play()

    disappear.Completed:Connect(function()
        sg:Destroy()

        StarterGui:SetCore("SendNotification", {
            Title = "Neko Loader",
            Text = "ä¸»æ ¸å¿ƒå»¶é²å•Ÿå‹•ä¸­... è«‹ç¨å€™ 3 ç§’å–µï½ï¼ˆé˜²å¡æ­»ï¼‰",
            Duration = 8
        })

        -- å…ˆ HttpGet + loadstringï¼ˆç¨ç«‹åŸ·è¡Œç·’ï¼‰
        task.spawn(function()
            local success, content = pcall(function()
                return game:HttpGet(mainScriptUrl, true)
            end)

            if success and content and content ~= "" then
                local loaderFunc, err = loadstring(content)
                if loaderFunc then
                    -- é—œéµï¼šå»¶é² 3 ç§’å†åŸ·è¡Œä¸»è…³æœ¬ï¼Œè®“å®¢æˆ¶ç«¯ç·©è¡
                    task.delay(3, function()
                        local execSuccess, execErr = pcall(loaderFunc)
                        if execSuccess then
                            print("[Neko Loader] ä¸»è…³æœ¬å»¶é²åŸ·è¡ŒæˆåŠŸï¼")
                            StarterGui:SetCore("SendNotification", {
                                Title = "NEKO å·²å–šé†’",
                                Text = "æ ¸å¿ƒå•Ÿå‹•å®Œæˆï½ äº«å—å§å–µğŸ¾",
                                Duration = 6
                            })
                        else
                            warn("[Neko Loader] ä¸»è…³æœ¬åŸ·è¡Œå¤±æ•—: " .. tostring(execErr))
                            StarterGui:SetCore("SendNotification", {
                                Title = "å•Ÿå‹•å‡ºå•é¡Œ",
                                Text = "æ ¸å¿ƒå•Ÿå‹•å¡ä½äº†... è©¦è©¦é‡é–‹ Robloxï¼Ÿ",
                                Duration = 10
                            })
                        end
                    end)
                else
                    warn("[Neko Loader] loadstring å¤±æ•—: " .. tostring(err))
                end
            else
                warn("[Neko Loader] HttpGet å¤±æ•—: " .. tostring(content))
                StarterGui:SetCore("SendNotification", {
                    Title = "é€£ç·šå¤±æ•—",
                    Text = "ç„¡æ³•æŠ“åˆ°ä¸»è…³æœ¬... æª¢æŸ¥ç¶²è·¯æˆ– executor",
                    Duration = 10
                })
            end
        end)
    end)
end)

